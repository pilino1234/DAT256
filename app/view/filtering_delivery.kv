<Filter>:
    orientation: 'vertical'
    MDToolbar:
        title:'Search options'
        md_bg_color: app.theme_cls.primary_color
        elevation: 10
    Widget:
        size_hint_y: .4
    BoxLayout:
        Widget:
            size_hint_x:0.1
        MDLabel:
            text: "From:"
            size_hint_x: 0.4
        MDTextField:
            hint_text: "(Required)"
    BoxLayout:
        Widget:
            size_hint_x:0.1
        MDLabel:
            text: "To:"
            size_hint_x: 0.4
        MDTextField:
            hint_text: "(Optional)"
    BoxLayout:
        Widget:
            size_hint_x:0.1
        MDLabel:
            text: "Distance:"
            size_hint_x: 0.4
        MDTextField:
            hint_text: "(Optional)"

    MDToolbar:
        title:'Weights'
        md_bg_color: app.theme_cls.primary_color
        elevation: 10
    Widget:
        size_hint_y: .5
    BoxLayout:
        MDIconButton:
            id: weight_walk_button
            icon: 'walk'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
        MDLabel:
            text: "Walk"
            size_hint_x: 0.4
        MDCheckbox:
            size_hint_x: 0.2
    BoxLayout:
        MDIconButton:
            id: weight_bike_button
            icon: 'bike'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
        MDLabel:
            text: "Bike"
            size_hint_x: 0.4
        MDCheckbox:
            size_hint_x: 0.2
    BoxLayout:
        MDIconButton:
            id: weight_car_button
            icon: 'car'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
        MDLabel:
            text: "Car"
            size_hint_x: 0.4
        MDCheckbox:
            size_hint_x: 0.2
    BoxLayout:
        MDIconButton:
            id: weight_truck_button
            icon: 'truck'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
        MDLabel:
            text: "Truck"
            size_hint_x: 0.4
        MDCheckbox:
            size_hint_x: 0.2
    Widget:
        size_hint_y: 0.6
    BoxLayout:
        MDIconButton:
            id: weight_truck_button
            icon: 'glass-flute'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
        MDLabel:
            text: "Include fragile"
            size_hint_x: 0.4
        MDCheckbox:
            size_hint_x: 0.2

    Widget:
        size_hint_y: 0.6
    MDFillRoundFlatButton:
        text: "    Search     "
        pos_hint: {'center_x': 0.5, 'center_y': .15}
    Widget:
        size_hint_y: 0.2