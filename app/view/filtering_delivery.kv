<Filter>:
    orientation: 'vertical'
    MDToolbar:
        title:'Search options'
        md_bg_color: app.theme_cls.primary_color
        elevation: 10
    Widget:
        size_hint_y: .4
    BoxLayout:
        Widget:
            size_hint_x:0.1
        MDLabel:
            text: "From:"
            size_hint_x: 0.4
        MDTextField:
            hint_text: "(Required)"
    BoxLayout:
        Widget:
            size_hint_x:0.1
        MDLabel:
            text: "To:"
            size_hint_x: 0.4
        MDTextField:
            hint_text: "(Optional)"
    BoxLayout:
        Widget:
            size_hint_x:0.1
        MDLabel:
            text: "Distance:"
            size_hint_x: 0.4
        MDTextField:
            hint_text: "(Optional)"
            id: input_distance

    MDToolbar:
        title:'Weights'
        md_bg_color: app.theme_cls.primary_color
        elevation: 10
    Widget:
        size_hint_y: .5
    BoxLayout:
        MDIconButton:
            icon: 'walk'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
        MDLabel:
            text: "Walk"
            size_hint_x: 0.4
        MDCheckbox:
            size_hint_x: 0.2
            id: check_walk
    BoxLayout:
        MDIconButton:
            icon: 'bike'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
        MDLabel:
            text: "Bike"
            size_hint_x: 0.4
        MDCheckbox:
            size_hint_x: 0.2
            id: check_bike
    BoxLayout:
        MDIconButton:
            icon: 'car'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
        MDLabel:
            text: "Car"
            size_hint_x: 0.4
        MDCheckbox:
            size_hint_x: 0.2
            id: check_car
    BoxLayout:
        MDIconButton:
            icon: 'truck'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
        MDLabel:
            text: "Truck"
            size_hint_x: 0.4
        MDCheckbox:
            size_hint_x: 0.2
            id: check_truck
    Widget:
        size_hint_y: 0.6
    BoxLayout:
        MDIconButton:
            icon: 'glass-flute'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
        MDLabel:
            text: "Include fragile"
            size_hint_x: 0.4
        MDCheckbox:
            id: check_fragile
            size_hint_x: 0.2

    Widget:
        size_hint_y: 0.6
    MDFillRoundFlatButton:
        text: "    Search     "
        pos_hint: {'center_x': 0.5, 'center_y': .15}
        on_release: self.parent.parent._filter_content(self.parent.ids.check_walk.active,self.parent.ids.check_bike.active,self.parent.ids.check_car.active,self.parent.ids.check_truck.active,self.parent.ids.check_fragile.active, self.parent.ids.input_distance.text)
    Widget:
        size_hint_y: 0.2