<Filter>:
    canvas.before:
        Color:
            rgba: 1,1,1, 1
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    MDToolbar:
        title:'Search Packages'
        md_bg_color: app.theme_cls.primary_color
        elevation: 10
        MDIconButton:
            id: back_button
            size_hint: None, None
            size: 50, 50
            icon: 'chevron-left'
            theme_text_color: 'Custom'
            text_color: 1,1,1, 1
            on_release: root.parent.hide_filter()
    Widget:
        size_hint_y: .4
    BoxLayout:
        Widget:
            size_hint_x:0.1
        MDLabel:
            text: "From:"
            size_hint_x: 0.4
        MDTextField:
            hint_text: "(Required)"
            on_text: root._on_search_from()
            id: input_from

    BoxLayout:
        Widget:
            size_hint_x:0.1
        MDLabel:
            text: "To:"
            size_hint_x: 0.4
        MDTextField:
            hint_text: "(Optional)"
            on_text: root._on_search_to()
            id: input_to

    BoxLayout:
        Widget:
            size_hint_x:0.1
        MDLabel:
            text: "Distance:"
            size_hint_x: 0.4
        MDTextField:
            hint_text: "(Optional)"

    MDToolbar:
        title:'Weights'
        md_bg_color: app.theme_cls.primary_color
        elevation: 10
    Widget:
        size_hint_y: .5
    BoxLayout:
        MDIconButton:
            icon: 'walk'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
        MDLabel:
            text: "Walk"
            size_hint_x: 0.4
        MDCheckbox:
            size_hint_x: 0.2
            id: check_walk
            active: True
    BoxLayout:
        MDIconButton:
            icon: 'car'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
        MDLabel:
            text: "Car"
            size_hint_x: 0.4
        MDCheckbox:
            size_hint_x: 0.2
            id: check_car
    BoxLayout:
        MDIconButton:
            icon: 'truck'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
        MDLabel:
            text: "Truck"
            size_hint_x: 0.4
        MDCheckbox:
            size_hint_x: 0.2
            id: check_truck
    Widget:
        size_hint_y: 0.6
    BoxLayout:
        MDIconButton:
            icon: 'glass-flute'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
        MDLabel:
            text: "Include fragile"
            size_hint_x: 0.4
        MDCheckbox:
            id: check_fragile
            size_hint_x: 0.2
    Widget:
        size_hint_y: 0.6
    MDFillRoundFlatButton:
        text: "    Search     "
        pos_hint: {'center_x': 0.5, 'center_y': .15}
        on_release: self.parent.parent._filter_content(check_walk.active, check_car.active, check_truck.active, check_fragile.active)
    Widget:
        size_hint_y: 1.6