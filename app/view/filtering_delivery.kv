<Filter>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 1,1,1, 1
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
    MDToolbar:
        title: 'Search Packages'
        md_bg_color: app.theme_cls.primary_color
        elevation: 10
        height: dp(80)

    Widget:
        size_hint_y: .35
    BoxLayout:
        padding: dp(40)

        MDLabel:
            text: "From:"
            halign: "right"
            size_hint_x: 0.1
        Widget:
            size_hint_x: 0.1
        MDTextField:
            on_text: root._on_search_from()
            id: input_from
            required: True
            helper_text_mode: 'on_error'
            pos_hint: {'center_x': 0.5, 'center_y': 0.15}
        Widget:
            size_hint_x: 0.1

    BoxLayout:
        padding: dp(40)

        MDLabel:
            text: "To:"
            halign: "right"
            size_hint_x: 0.1
        Widget:
            size_hint_x: 0.1
        MDTextField:
            on_text: root._on_search_to()
            id: input_to
            required: True
            helper_text_mode: 'on_error'
            pos_hint: {'center_x': 0.5, 'center_y': 0.15}
        Widget:
            size_hint_x: 0.1
    Widget:
        size_hint_y: .3

    MDToolbar:
        title:'Package Types'
        md_bg_color: app.theme_cls.primary_color
        elevation: 10
    Widget:
        size_hint_y: .5

    BoxLayout:
        Widget:
            width: dp(20)
            size_hint: (None, None)
        MDIconButton:
            icon: 'walk'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        MDLabel:
            text: "Small"
            size_hint_x: 0.4
        MDCheckbox:
            size_hint_x: 0.1
            id: check_walk
            active: True

    BoxLayout:
        Widget:
            width: dp(20)
            size_hint: (None, None)
        MDIconButton:
            icon: 'car'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        MDLabel:
            text: "Big"
            size_hint_x: 0.4
        MDCheckbox:
            size_hint_x: 0.1
            id: check_car
    BoxLayout:
        Widget:
            width: dp(20)
            size_hint: (None, None)
        MDIconButton:
            icon: 'truck'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        MDLabel:
            text: "Large"
            size_hint_x: 0.4
        MDCheckbox:
            size_hint_x: 0.1
            id: check_truck
    BoxLayout:
        Widget:
            width: dp(20)
            size_hint: (None, None)
        MDIconButton:
            icon: 'glass-flute'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        MDLabel:
            text: "Include fragile packages"
            size_hint_x: 0.4
        MDCheckbox:
            size_hint_x: 0.1
            id: check_fragile
    Widget:
        size_hint_y: 0.6
    MDRaisedButton:
        id: search_button
        write_tab: False
        text: "    Search     "
        pos_hint: {'center_x': 0.5, 'center_y': .15}
        on_release: self.parent.parent._filter_content(check_walk.active, check_car.active, check_truck.active, check_fragile.active)
        disabled: True
    Widget:
        size_hint_y: 1.6