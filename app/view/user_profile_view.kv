<EditButton@MDFloatingActionButton>:
    id: 'edit_button'
    icon: 'border-color'
    size_hint: self.size_hint
    pos_hint: {'center_x': 0.9, 'center_y': 0.5}
    opposite_colors: False
    on_release: self.parent.parent.parent.edit_button_callback(self.field_editing)

<GetTextDialog@MDInputDialog>:
    id: text_input
    result: ""
    on_touch_up: self.parent.do_edit(self.text_field)
    events_callback: self.parent.test_callback

<AnswerInput>:
    id: input_box
    size_hint: 0.6, 0.5
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    MDCard:
        BoxLayout:
            orientation: "vertical"
            padding: 30
            spacing: 30
            MDTextField:
                size_hint: 0.8, None
                multiline: False
                pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                id: text_input
            MDRaisedButton:
                size_hint: None, None
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                text: "Change"
                on_release: self.parent.parent.parent.parent.do_edit(text_input.text)

<UserProfileView>:
    id: user_profile_view
    orientation: 'vertical'
    padding: 30
    spacing: 30
    BoxLayout:
        id: dummy
        RelativeLayout:
            id: user_avatar_box
            AsyncImage:
                id: user_avatar_image
                source: user_profile_view.user_viewing.get_avatar()
                size_hint: 1, 0.4
                pos_hint: {'center_x': 0.5, 'center_y': 0.7}

    BoxLayout:
        size_hint: 1, 0.4
        pos_hint: {'center_x': 0.5, 'center_y': 0.25}
        orientation: 'vertical'
        padding: 30
        spacing: 30
        RelativeLayout:
            id: user_name_box
            MDLabel:
                id: user_name_label
                text: user_profile_view.user_viewing.get_name()
                font_style: "Display3"
                halign: 'center'
        RelativeLayout:
            id: user_phone_box
            MDLabel:
                id: user_phone_label
                text: user_profile_view.user_viewing.get_phone()
                font_style: "Display1"
                halign: 'center'
        RelativeLayout:
            id: user_email_box
            MDLabel:
                id: user_email_label
                text: user_profile_view.user_viewing.get_email()
                font_style: "Display1"
                halign: 'center'

