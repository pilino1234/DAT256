<Welcome>:
    orientation: "vertical"
    padding: (0, 0, 0, 20)

    MDLabel:
        font_style: 'H2'
        theme_text_color: 'Primary'
        text: "Welcome to Carrepsa!"
        halign: 'center'

    MDFillRoundFlatButton:
        id: login_button
        on_release: root.parent.parent.route("login")
        text: "Login"
        pos_hint: {'center_x': 0.5}

    MDFillRoundFlatButton:
        id: register_button
        on_release: root.parent.parent.route("register")
        text: "Register"
        pos_hint: {'center_x': 0.5}