#:import MDSwitch kivymd.selectioncontrols.MDSwitch




<DeliveryRequest>:
    orientation: "vertical"
    padding: (0, 0, 0, 20)

    GridLayout:
        cols: 3
        row_force_default: True
        row_default_height: 75

        RelativeLayout:
            size_hint: (None, None)
            width: 120
            MDLabel:
                halign: "right"
                theme_text_color: 'Primary'
                text: "Package: "
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        BoxLayout:
            padding: (20, 0)
            MDTextField:
        Widget:
            size_hint_x: None
            width: 60

        RelativeLayout:
            size_hint: (None, None)
            width: 120
            MDLabel:
                halign: "right"
                theme_text_color: 'Primary'
                text: "From: "
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        BoxLayout:
            padding: (20, 0)
            MDTextField:
        HollowIcon:
            icon: 'map-marker'
            theme_text_color: 'Custom'
            text_color: 212/255, 144/255, 0/255, 1

        RelativeLayout:
            size_hint: (None, None)
            width: 120
            MDLabel:
                halign: "right"
                theme_text_color: 'Primary'
                text: "To: "
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        BoxLayout:
            padding: (20, 0)
            MDTextField:
        HollowIcon:
            icon: 'map-marker'
            theme_text_color: 'Custom'
            text_color: 152/255, 224/255, 232/255, 1

        RelativeLayout:
            size_hint: (None, None)
            width: 120
            MDLabel:
                halign: "right"
                theme_text_color: 'Primary'
                text: "Weight: "
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}

        BoxLayout:
            size_hint_x: 1
            padding: (30, 0)
            spacing: 10

            MDIconButton:
                icon: 'walk'
                theme_text_color: 'Custom'
                text_color: 128/255, 128/255, 128/255, 1

            MDIconButton:
                icon: 'motorbike'
                theme_text_color: 'Custom'
                text_color: 128/255, 128/255, 128/255, 1

            MDIconButton:
                canvas.before:
                    Color:
                        rgba: 50/255, 205/255, 50/255, 1
                    Line:
                        width: 0.5
                        rectangle: self.x, self.y, self.width, 0
                icon: 'car'
                theme_text_color: 'Custom'
                text_color: 50/255, 205/255, 50/255, 1

            MDIconButton:
                icon: 'truck'
                theme_text_color: 'Custom'
                text_color: 128/255, 128/255, 128/255, 1

        HollowIcon:
            icon: 'dumbbell'
            theme_text_color: 'Custom'
            text_color: 0/255, 0/255, 0/255, 1

        RelativeLayout:
            size_hint: (None, None)
            width: 120
            MDLabel:
                halign: "right"
                theme_text_color: 'Primary'
                text: "Payment: "
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        BoxLayout:
            padding: (20, 0)
            MDTextField:
        MDIconButton:
            theme_text_color: 'Custom'
            text_color: 255/255, 255/255, 255/255, 1
            Label:
                text: 'SEK'
                color: (0,0,0,1)


        RelativeLayout:
            size_hint: (None, None)
            width: 120
            MDLabel:
                halign: "right"
                theme_text_color: 'Primary'
                text: "Money lock: "
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        BoxLayout:
            padding: (20, 0)
            MDTextField:
        MDIconButton:
            theme_text_color: 'Custom'
            text_color: 255/255, 255/255, 255/255, 1
            Label:
                text: 'SEK'
                color: (0,0,0,1)

        RelativeLayout:
            size_hint: (None, None)
            width: 120
            MDLabel:
                halign: "right"
                theme_text_color: 'Primary'
                text: "Fragile? "
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}

        BoxLayout:
            size_hint_x: 1
            padding: (30, 0)

            MDSwitch:
                size_hint: (None, None)
                width: 40
                height: 60

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        padding: (0, 20, 20, 0)

        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'bottom'
            padding: (15, 0, 0, 15)

            MDTextField:
                hint_text: 'Package Description'
                max_text_length: 300
                icon: 'lock-outline'
                multiline: True
                foreground_color: 212/255, 144/255, 0/255, 1
                size_hint_x: 0.8

        MDFloatingActionButton:
            icon: 'camera'
            text_color: app.theme_cls.primary_color
            opposite_colors: True
            elevation_normal: 8
            md_bg_color: 255/255, 255/255, 255/255, 1

    MDFillRoundFlatButton:
        text: "Request Delivery"
        pos_hint: {'center_x': 0.5, 'center_y': .15}
