#:import UpdateSpinner presenter.delivery_list

<DeliveryList>:
    MDTabbedPanel:
        id: delivery_list
        MDTab:
            name: 'list'
            text: "List"

            BoxLayout:
                ScrollView:
                    id: scroll_view
                    do_scroll_x: False
                    do_scroll_y: True

                    BoxLayout:
                        id: available_requests
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
                        padding: 30
                        spacing: 30

            FloatLayout:
                UpdateSpinner:
                    scroll: scroll_view
                    event_update: lambda x: root._update_content(self)


        MDTab:
            name: 'map'
            text: "Map"

            MDLabel:
                text: "Show map here"


<WhiteCardButton>
    canvas.before:
        Color:
            rgba: 160/255, 160/255, 160/255, 1
    theme_text_color: 'Custom'
    text_color: root.theme_cls.primary_color
    md_bg_color: 255/255, 255/255, 255/255, 1
    elevation_normal: 4

<ListItem>:
    size_hint: (1, None)
    height: 180
    on_release: self.tap_callback(self.request)

    RelativeLayout:
        size: 40, 40
        HollowIcon:
            pos: self.parent.width-self.width, self.parent.height/3
            icon: 'chevron-right'

    RelativeLayout:

        MDLabel:
            id: item
            pos: 20, self.parent.height/4
            font_style: 'H6'
            theme_text_color: 'Primary'
            text: "Small Cardboard Box"

        BoxLayout:
            pos: 0, 70
            orientation: 'horizontal'

            IconWithText:
                id: origin
                text: "Brunnsparken"

                HollowIcon:
                    icon: 'map-marker'
                    theme_text_color: 'Custom'
                    text_color: 243/255, 179/255, 42/255, 1

            IconWithText:
                id: destination
                text: "Fr√∂lunda Torg"

                HollowIcon:
                    icon: 'map-marker'
                    theme_text_color: 'Custom'
                    text_color: 152/255, 224/255, 232/255, 1

        BoxLayout:
            pos: 0, 20
            orientation: 'horizontal'

            IconWithText:
                id: reward
                text: "20 kr"

                HollowIcon:
                    icon: 'currency-usd'
                    theme_text_color: 'Custom'
                    text_color: 212/255, 144/255, 0/255, 1

            IconWithText:
                id: distance
                text: "8 km"

                HollowIcon:
                    icon: 'ruler'

            IconWithText:
                id: weight
                text: "Small"

                HollowIcon:
                    id: weight_icon
                    icon: 'walk'
                    theme_text_color: 'Custom'
                    text_color: 107/255, 200/255, 187/255, 1
