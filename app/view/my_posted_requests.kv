<MyPostedRequests>:
    BoxLayout:
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                id: my_requests
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                padding: 30
                spacing: 30

<MyPostedRequest>:
    size_hint: (1, None)
    height: 180

    RelativeLayout:
        size: 40, 40
        HollowIcon:
            pos: self.parent.width-self.width, self.parent.height/3
            icon: 'chevron-right'

    RelativeLayout:
        MDLabel:
            id: item
            pos: 20, self.parent.height/4
            font_style: 'H6'
            theme_text_color: 'Primary'
            text: "Small Cardboard Box"

        BoxLayout:
            pos: 0, 70
            orientation: 'horizontal'

            IconWithText:
                id: origin
                text: "Brunnsparken"

                HollowIcon:
                    icon: 'map-marker'
                    theme_text_color: 'Custom'
                    text_color: 243/255, 179/255, 42/255, 1

            IconWithText:
                id: destination
                text: "Fr√∂lunda Torg"

                HollowIcon:
                    icon: 'map-marker'
                    theme_text_color: 'Custom'
                    text_color: 152/255, 224/255, 232/255, 1

        BoxLayout:
            pos: 0, 20
            orientation: 'horizontal'

            IconWithText:
                id: reward
                text: "20 kr"

                HollowIcon:
                    icon: 'currency-usd'
                    theme_text_color: 'Custom'
                    text_color: 212/255, 144/255, 0/255, 1

            IconWithText:
                id: status
                text: "Status: "

                HollowIcon:
                    icon: 'truck-delivery'
                    theme_text_color: 'Custom'
                    text_color: 107/255, 200/255, 187/255, 1