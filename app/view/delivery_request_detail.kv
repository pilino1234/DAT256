#:import MDIconButton kivymd.button.MDIconButton

<DeliveryRequestDetail>:
    BoxLayout:
        id: detail_view
        orientation: "vertical"

        ScrollView:
            id: detailScrollView
            StackLayout:
                id: stack
                size_hint_y: None
                height: self.minimum_height
                padding: [30, 30, 30, 0]
                spacing: 30

                MDIconButton:
                    id: back_button
                    size_hint: None, None
                    size: 50, 50
                    icon: 'chevron-left'
                    theme_text_color: 'Custom'
                    text_color: 0.5, 0.5, 0.5, 1
                    on_release: root._back_button_handler()


                DetailLabel:
                    title: "Item"
                    description: root.request.item

                DetailImage:
                    id: product_photo

                DetailLabel:
                    title: "From"
                    description: root.request.origin
                    size_hint_x: 0.5

                DetailLabel:
                    title: "To"
                    description: root.request.destination
                    size_hint_x: 0.5

                DetailLabel:
                    title: "Delivery Distance"
                    description: root.request.distance_pretty

                DetailLabel:
                    id: assistant
                    title: "Assistant"
                    on_release: root._transition_to_user_profile(root.delivery_assistant)
                    ripple_alpha: 0.5
                    size_hint_x: 0.5
                    disabled: False

                    RelativeLayout:
                        size: 40, 40
                        HollowIcon:
                            pos: self.parent.width-self.width, self.parent.height/2-self.height/2
                            icon: 'chevron-right'

                DetailLabel:
                    id: owner
                    title: "Owner"
                    on_release: root._transition_to_user_profile(root.delivery_owner)
                    ripple_alpha: 0.5
                    size_hint_x: 0.5
                    disabled: False

                    RelativeLayout:
                        size: 40, 40
                        HollowIcon:
                            pos: self.parent.width-self.width, self.parent.height/2-self.height/2
                            icon: 'chevron-right'


                DetailIcon:
                    title: "Weight"
                    icon: root.request.weight_icon
                    size_hint_x: 0.5

                DetailLabel:
                    title: "Fragile"
                    description: "Yes" if root.request.fragile else "No"
                    size_hint_x: 0.5

                DetailLabel:
                    title: "Reward"
                    description: "$ " + str(root.request.reward)
                    size_hint_x: 0.5

                DetailLabel:
                    title: "Money Lock"
                    description: "$ " + str(root.request.money_lock)
                    size_hint_x: 0.5

                DetailLabel:
                    title: "Description"
                    description: root.request.description
                    size_hint_x: 1

<DetailLabel>:
    canvas.before:
        Color:
            rgba: 160/255, 160/255, 160/255, 1

    padding: [30, 0, 30, 0]
    theme_text_color: 'Custom'
    text_color: root.theme_cls.primary_color
    md_bg_color: 255/255, 255/255, 255/255, 1
    elevation_normal: 4
    size_hint: (1, None)
    padding: dp(20), dp(0)
    height: 100
    ripple_alpha: 0
    disabled: True

    BoxLayout:
        id: container
        orientation: "vertical"
        size_hint_y: None
        height: self.minimum_height
        spacing: 7
        title: ""
        description: ""

        MDLabel:
            id: title
            font_style: 'H6'
            text_size: self.width, None
            color: 0, 0, 0, 1
            size_hint_y: None
            height: self.texture_size[1]
            text: root.title

        MDLabel:
            id: description
            font_style: 'Body1'
            font_size: 16
            text_size: root.width, None
            color: 0, 0, 0, 1
            size_hint_y: None
            height: self.texture_size[1]
            text: root.description

<DetailIcon>:
    canvas.before:
        Color:
            rgba: 160/255, 160/255, 160/255, 1

    padding: [30, 0, 30, 0]
    theme_text_color: 'Custom'
    text_color: root.theme_cls.primary_color
    md_bg_color: 255/255, 255/255, 255/255, 1
    elevation_normal: 4
    size_hint: (1, None)
    padding: dp(20)
    title: ""
    icon: "chevron-left"
    height: 100
    ripple_alpha: 0
    disabled: True

    BoxLayout:
        id: container
        orientation: "vertical"
        size_hint_y: None
        height: self.minimum_height

        MDLabel:
            id: title
            font_style: 'H6'
            text_size: self.width, None
            color: 0, 0, 0, 1
            size_hint_y: None
            height: self.texture_size[1]
            text: root.title

        HollowIcon:
            size_hint: None, None
            id: icon
            theme_text_color: 'Custom'
            icon: root.icon
            text_color: (107 / 255, 200 / 255, 0 / 255, 1)


<DetailImage>:
    canvas.before:
        Color:
            rgba: 160/255, 160/255, 160/255, 1

    padding: [30, 0, 30, 0]
    theme_text_color: 'Custom'
    text_color: root.theme_cls.primary_color
    md_bg_color: 255/255, 255/255, 255/255, 1
    elevation_normal: 4
    size_hint: (1, None)

    title: ""
    source: ""
    height: dp(250)
    ripple_alpha: 0
    disabled: True

    BoxLayout:
        id: container
        orientation: "vertical"
        size_hint_y: None
        height: self.minimum_height

        MDLabel:
            id: title
            font_style: 'H6'
            text_size: self.width, None
            color: 0, 0, 0, 1
            size_hint_y: None
            height: self.texture_size[1]
            text: root.title

        AsyncImage:
            size_hint: dp(200), None
            id: image
            source: root.source
            pos_hint: {'center_x': 0.5, 'center_y': .5}
