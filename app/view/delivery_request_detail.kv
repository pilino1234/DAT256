#:import MDIconButton kivymd.button.MDIconButton


<DeliveryRequestDetail>:
    orientation: "vertical"
    MDIconButton:
        size_hint: None, None
        size: 50, 50
        icon: 'chevron-left'
        theme_text_color: 'Custom'
        text_color: 0.5, 0.5, 0.5, 1
        on_release: root.back_button_handler()
    ScrollView:
        id: detailScrollView
        StackLayout:
            id: stack
            size_hint_y: None
            height: self.minimum_height
            padding: [20, 10]
            spacing: 25

            DetailLabel:
                title: "Item"
                description: root.request.item

            DetailLabel:
                title: "From"
                description: root.request.origin

            DetailLabel:
                title: "To"
                description: root.request.destination

            DetailLabel:
                title: "Delivery Distance"
                description: root.request.distance_pretty

            DetailIcon:
                title: "Weight"
                icon: root.request.weight_icon
                size_hint_x: 0.5

            DetailLabel:
                title: "Fragile"
                description: "Yes" if root.request.fragile else "No"
                size_hint_x: 0.5

            DetailLabel:
                title: "Reward"
                description: "$ " + str(root.request.reward)
                size_hint_x: 0.5

            DetailLabel:
                title: "Money Lock"
                description: "$ " + str(root.request.money_lock)
                size_hint_x: 0.5

            DetailLabel:
                title: "Description"
                description: root.request.description
                size_hint_x: 1

            MDRaisedButton:
                text: "Show on Map"
                size_hint: (0.5, None)
                on_release: root.show_on_map_button_callback()

            MDRaisedButton:
                id: action_button
                size_hint: (0.5, None)
                text: ""

<DetailLabel>:
    orientation: "vertical"
    size_hint_y: None
    height: self.minimum_height
    spacing: 7
    title: ""
    description: ""

    MDLabel:
        id: title
        font_style: 'H6'
        text_size: self.width, None
        color: 0, 0, 0, 1
        size_hint_y: None
        height: self.texture_size[1]
        text: root.title

    MDLabel:
        id: description
        font_style: 'Body1'
        font_size: 16
        text_size: root.width, None
        color: 0, 0, 0, 1
        size_hint_y: None
        height: self.texture_size[1]
        text: root.description

<DetailIcon>:
    orientation: "vertical"
    size_hint_y: None
    height: self.minimum_height
    spacing: -8
    title: ""
    icon: "chevron-left"

    MDLabel:
        id: title
        font_style: 'H6'
        text_size: self.width, None
        color: 0, 0, 0, 1
        size_hint_y: None
        height: self.texture_size[1]
        text: root.title

    HollowIcon:
        size_hint: None, None
        padding: -20, 0, 0, 0
        id: icon
        theme_text_color: 'Custom'
        icon: root.icon
        text_color: (107 / 255, 200 / 255, 0 / 255, 1)
