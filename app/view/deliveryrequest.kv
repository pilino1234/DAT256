#:import MDRoundFlatButton kivymd.button.MDRoundFlatButton
#:import MDTextFieldRect kivymd.textfields.MDTextFieldRect
#:import MDTextField kivymd.textfields.MDTextField
#:import MDTextFieldClear kivymd.textfields.MDTextFieldClear
#:import MDFillRoundFlatButton kivymd.button.MDFillRoundFlatButton
#:import MDTextFieldRect kivymd.textfields.MDTextFieldRect
#:import MDTextFieldRound kivymd.textfields.MDTextFieldRound




<DeliveryRequest>:
    orientation: "vertical"
    padding: 10
    spacing: 10

    GridLayout:
        cols: 3
        Label:
            text: "Item: "
            color: (0,0,0,1)
            width: 200
        MDTextField:

            width: 200
            height:10
        MDIconButton:
            icon: 'chevron-down'
            theme_text_color: 'Custom'
            text_color: 128/255, 128/255, 128/255, 1

        Label:

            text: "From: "
            color: (0,0,0,1)

        MDTextField:
            width: 200
            height: 10
        HollowIcon:
            icon: 'map-marker'
            theme_text_color: 'Custom'
            text_color: 212/255, 144/255, 0/255, 1
            width: 100

        Label:
            text: "To: "
            color: (0,0,0,1)
        MDTextField:
            width: 200
            height: 10
        HollowIcon:
            icon: 'map-marker'
            theme_text_color: 'Custom'
            text_color: 152/255, 224/255, 232/255, 1
        Label:
            text: "Weight: "
            color: (0,0,0,1)
        RelativeLayout:
            MDIconButton:
                pos: 0, 0
                icon: 'walk'
                theme_text_color: 'Custom'
                text_color: 128/255, 128/255, 128/255, 1

            MDIconButton:
                pos: 55, 0
                icon: 'motorbike'
                theme_text_color: 'Custom'
                text_color: 128/255, 128/255, 128/255, 1

            MDIconButton:
                pos: 110, 0
                canvas.before:
                    Color:
                        rgba: 50/255, 205/255, 50/255, 1
                    Line:
                        width: 0.5
                        rectangle: self.x, self.y, self.width, 0
                icon: 'car'
                theme_text_color: 'Custom'
                text_color: 50/255, 205/255, 50/255, 1

            MDIconButton:
                pos: 165, 0
                icon: 'truck'
                theme_text_color: 'Custom'
                text_color: 128/255, 128/255, 128/255, 1


        HollowIcon:
            icon: 'dumbbell'
            theme_text_color: 'Custom'
            text_color: 0/255, 0/255, 0/255, 1
        Label:
            text: "Payment: "
            color: (0,0,0,1)

        MDTextField:
            width: 200
            height: 10

        MDIconButton:
            theme_text_color: 'Custom'
            text_color: 255/255, 255/255, 255/255, 1
            Label:
                text: 'SEK'
                color: (0,0,0,1)
        Label:
            text: "Moneylock: "
            color: (0,0,0,1)
        MDTextField:

            width: 200
            height: 10
        MDIconButton:
            theme_text_color: 'Custom'
            text_color: 255/255, 255/255, 255/255, 1
            Label:
                text: 'SEK'
                color: (0,0,0,1)

        Label:
            text: "Fragile: "
            font_size: '12sp'
            color:  128/255, 128/255, 128/255, 1
        RelativeLayout:
            MDIconButton:
                pos: 55, 0
                theme_text_color: 'Custom'
                text_color: 50/255, 205/255, 50/255, 0
                Label:
                    text: 'Yes'
                    font_size: '12sp'
                    color: (0,0,0,1)

            MDIconButton:
                pos: 165, 0
                canvas.before:
                    Color:
                        rgba: 255/255, 25/255, 25/255, 1
                    Line:
                        width: 0.5
                        rectangle: self.x, self.y, self.width, 0
                theme_text_color: 'Custom'
                text_color: 50/255, 205/255, 50/255, 0
                Label:
                    text: 'No'
                    font_size: '12sp'
                    color: 255/255, 25/255, 25/255, 1


        HollowIcon:
            icon: 'dumbbell'
            theme_text_color: 'Custom'
            text_color: 0/255, 0/255, 0/255, 0







    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'

        MDTextField:
            hint_text: 'Package Description'
            max_text_length: 300
            icon: 'lock-outline'
            multiline: True
            foreground_color: 212/255, 144/255, 0/255, 1

        MDFloatingActionButton:
            icon: 'camera'
            text_color: app.theme_cls.primary_color
            opposite_colors: True
            elevation_normal: 8
            md_bg_color: 255/255, 255/255, 255/255, 1





    MDFillRoundFlatButton:
        text: "Request Delivery"
        pos_hint: {'center_x': 0.5, 'center_y': .15}







